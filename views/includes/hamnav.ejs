<!-- ---------------------------- hamburger nav  ---------------------------- -->
<div class="navigation">
	<input type="checkbox" class="navigation__checkbox" id="navi-toogle" />
	<label for="navi-toogle" class="navigation__button">
		<span class="navigation__icon">&nbsp;</span>
	</label>
	<div class="navigation__background">&nbsp;</div>

	<nav class="navigation__nav-ham">
		<ul class="navigation__list">
			<li class="navigation__item" style="width: 400px; margin: 3rem">
				<a href="/" class="navigation__link">WoodCase</a>
			</li>
			<% collections.forEach(collection => { %>
			<li class="navigation__item" style="width: 400px; margin: 3rem">
				<a href="/collections/<%= collection.title %>" class="navigation__link"
					><%= collection.title %></a
				>
			</li>
			<% }) %>
			<li class="navigation__item" style="width: 400px; margin: 3rem">
				<a href="/shop" class="navigation__link">Shop</a>
			</li>
			<li class="navigation__item" style="width: 400px; margin: 3rem">
				<a href="#" class="navigation__link">Basket</a>
			</li>
		</ul>
	</nav>
</div>
